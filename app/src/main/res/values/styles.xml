<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="row">
        <item name="android:background">@drawable/black_alpha</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="column">
        <item name="android:textColor">#202020</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">90dip</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="ProgressDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowActionBar">false</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="select_test_dialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>
